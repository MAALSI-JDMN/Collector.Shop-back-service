extends layout

block content

    style.
        body {
            background-color: #0f172a;
            color: #e2e8f0;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            margin: 0;
            padding: 20px;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 900px;
            margin: 0 auto 30px auto;
            padding-bottom: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        h1 {
            font-size: 24px;
            font-weight: 700;
            background: linear-gradient(90deg, #60a5fa, #c084fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
        }


        .status-badge {
            display: flex;
            align-items: center;
            background: rgba(16, 185, 129, 0.2);
            color: #34d399;
            padding: 8px 16px;
            border-radius: 99px;
            font-size: 14px;
            font-weight: 600;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }
        .dot {
            width: 8px; height: 8px;
            background-color: #34d399;
            border-radius: 50%;
            margin-right: 8px;
            box-shadow: 0 0 10px #34d399;
            animation: pulse 2s infinite;
        }

        #messages {
            list-style: none;
            padding: 0;
            max-width: 900px;
            margin: 0 auto;
        }

        .card {
            background: rgba(30, 41, 59, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
            animation: slideDown 0.4s ease-out;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }
        .card:hover {
            transform: translateY(-2px);
            background: rgba(30, 41, 59, 0.9);
            border-color: rgba(255,255,255,0.2);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
        }


        .card.user-card {
            border-left: 4px solid #c084fc;
        }
        .avatar {
            width: 56px; height: 56px;
            background: linear-gradient(135deg, #6366f1, #a855f7);
            border-radius: 12px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 20px;
            font-weight: bold;
            color: white;
            margin-right: 20px;
            box-shadow: 0 4px 10px rgba(168, 85, 247, 0.4);
        }
        .content-area { flex-grow: 1; }
        .user-header { display: flex; align-items: baseline; margin-bottom: 4px; }
        .user-name { font-size: 18px; font-weight: 600; color: #f8fafc; margin-right: 10px; }
        .user-tag {
            font-size: 11px; text-transform: uppercase; letter-spacing: 1px;
            background: rgba(192, 132, 252, 0.2); color: #e9d5ff;
            padding: 2px 8px; border-radius: 4px; font-weight: 700;
        }
        .user-details { color: #94a3b8; font-size: 14px; margin: 4px 0; }
        .highlight { color: #38bdf8; }

        .card.system-card {
            border-left: 4px solid #64748b;
            font-family: 'Fira Code', monospace;
        }
        .sys-icon {
            width: 40px; height: 40px;
            background: #334155;
            border-radius: 50%;
            display: flex; justify-content: center; align-items: center;
            margin-right: 20px; color: #94a3b8; font-size: 18px;
        }
        .sys-text { color: #cbd5e1; font-size: 14px; }

        .time-badge {
            font-size: 12px;
            color: #64748b;
            background: rgba(0,0,0,0.2);
            padding: 4px 10px;
            border-radius: 6px;
            font-family: monospace;
            white-space: nowrap;
        }

        @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }
        @keyframes slideDown { from { opacity: 0; transform: translateY(-20px); } to { opacity: 1; transform: translateY(0); } }


    div.header-container
        div
            h1 Collector.Shop Monitor
            p(style="color: #64748b; font-size: 14px; margin-top: 5px") Flux Kafka en temps r√©el
        div.status-badge
            div.dot
            span Live Connected

    ul#messages

    script(src="/socket.io/socket.io.js")
    script.
        const socket = io();

        socket.on('nouvelle-commande', function(data) {
            const list = document.getElementById('messages');
            const li = document.createElement('li');

            let parsedContent;
            let isUserJson = false;

            try {
                parsedContent = JSON.parse(data.contenu);
                if (parsedContent.type === 'user-INFO' && parsedContent.content) {
                    isUserJson = true;
                }
            } catch (e) { isUserJson = false; }


            if (isUserJson) {
                const user = parsedContent.content;
                const initiales = (user.prenom[0] + user.nom[0]).toUpperCase();

                li.className = 'card user-card';
                li.innerHTML = `
          <div class="avatar">${initiales}</div>
          <div class="content-area">
            <div class="user-header">
              <span class="user-name">${user.prenom} ${user.nom}</span>
              <span class="user-tag">Client</span>
            </div>
            <div class="user-details">
              <span>‚úâÔ∏è ${user.email}</span> ‚Ä¢
              <span>üéÇ ${user.age} ans</span>
            </div>
          </div>
          <div class="time-badge">${new Date().toLocaleTimeString()}</div>
        `;

            } else {
                li.className = 'card system-card';
                li.innerHTML = `
          <div class="sys-icon">#</div>
          <div class="content-area">
             <div class="user-tag" style="background:rgba(148, 163, 184, 0.2); color:#cbd5e1; width:fit-content; margin-bottom:5px;">SYSTEM LOG</div>
             <div class="sys-text">> ${data.contenu}</div>
          </div>
          <div class="time-badge">${new Date().toLocaleTimeString()}</div>
        `;
            }

            list.insertBefore(li, list.firstChild);
        });